{
  "include": ["./*", "../../types"],
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "jsx": "react",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@/common": ["../common"],
      "@/common/*": ["../common/*"],
      "@/bridge/*": ["../bridge/*"],
      "@/bridge": ["../bridge"],
      "@/*": ["./*"],
      "@@/*": [".umi/*"]
    }
  }
}
